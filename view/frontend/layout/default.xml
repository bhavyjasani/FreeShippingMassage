<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Dolphin_FreeShippingMessage::css/custommessage.css"/>
    </head>
    <body>
        <referenceBlock name="minicart">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="minicart_content" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="free_shipping_message" xsi:type="array">
                                    <item name="component" xsi:type="string">Dolphin_FreeShippingMessage/js/view/minicart/message</item>
                                    <item name="displayArea" xsi:type="string">subtotalContainer</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Dolphin_FreeShippingMessage/minicart/message</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>